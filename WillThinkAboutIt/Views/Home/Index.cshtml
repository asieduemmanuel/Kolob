@{
    ViewBag.Title = "carousel";
}

<meta name="viewport" content="width=device-width, initial-scale=1">
<title>Satyaprakash Carousel</title>
<link href="bootstrap/css/bootstrap.min.css" rel="stylesheet">

<fieldset>
    <legend style="font-family:Arial Black;color:blue"> KOLOB BUSINESS CENTER</legend>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div id="imageCarousel" class="carousel slide" data-interval="2000"
                     data-ride="carousel" data-pause="hover" data-wrap="true">

                    <ol class="carousel-indicators">
                        <li data-target="#imageCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#imageCarousel" data-slide-to="1"></li>
                        <li data-target="#imageCarousel" data-slide-to="2"></li>
                        <li data-target="#imageCarousel" data-slide-to="3"></li>
                    </ol>

                    <div class="carousel-inner">
                        <div class="item active">
                            <img style="width:100%;" src="Images/ba.jfif" class="img-responsive">
                            <div class="carousel-caption">
                                <h3></h3>

                            </div>
                        </div>
                        <div class="item">
                            <img style="width:100%;" src="Images/ui.jfif" class="img-responsive">
                            <div class="carousel-caption">
                                <h3></h3>

                            </div>
                        </div>
                        <div class="item">
                            <img style="width:100%;" src="Images/th.jfif" class="img-responsive">
                            <div class="carousel-caption">
                                <h3></h3>
                                
                            </div>
                        </div>
                    </div>

                    <a href="#imageCarousel" class="carousel-control left" data-slide="prev">
                        <span class="glyphicon glyphicon-hand-left"></span>
                    </a>
                    <a href="#imageCarousel" class="carousel-control right" data-slide="next">
                        <span class="glyphicon glyphicon-hand-right"></span>
                    </a>
                </div>

            </div>
        </div>
    </div>
</fieldset>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js">
</script >
